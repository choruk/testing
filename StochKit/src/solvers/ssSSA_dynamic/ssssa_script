#!/bin/bash
#check environment variables and run ssssa
#this file gets copied to main stochkit directory
#on compilation of ssssa

#set -x

if [ "$STOCHKIT_HOME" == "" ]; then
  pushd "$(dirname "$0")" > /dev/null
  export STOCHKIT_HOME="`pwd -P`"
  popd > /dev/null
fi

#Linux
export LD_LIBRARY_PATH="$LD_LIRARY_PATH:$STOCHKIT_HOME/libs/boost_1_53_0/stage/lib/"
#Mac
export DYLD_LIBRARY_PATH="$DYLD_LIRARY_PATH:$STOCHKIT_HOME/libs/boost_1_53_0/stage/lib/"

"$STOCHKIT_HOME/bin/ssssa" $@
